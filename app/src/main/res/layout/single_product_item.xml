<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginHorizontal="8dp"
    android:background="@drawable/card_shadow"
    android:layout_marginVertical="8dp">

    <ImageView
        android:id="@+id/product_item_picture"
        android:layout_width="@dimen/_110sdp"
        android:layout_height="@dimen/_110sdp"
        android:maxHeight="160dp"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/product_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/open_sans"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/product_item_picture"
        app:layout_constraintStart_toStartOf="@+id/product_item_picture"
        app:layout_constraintTop_toBottomOf="@+id/product_item_picture" />
</androidx.constraintlayout.widget.ConstraintLayout>